<UserControl
	x:Class="New_SF_IT.support" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:New_SF_IT"
	Height="450"
	Width="800">
	<Grid
		HorizontalAlignment="Center"
		VerticalAlignment="Center">
		<Border
			Background="#F7F8FF"
			Padding="20 10 20 10"
			BorderBrush="#FF808080"
			BorderThickness="1"
			CornerRadius="10">
			<StackPanel
				Margin="10">
				<StackPanel
					Orientation="Horizontal"
					Margin="0 0 0 20"
					VerticalAlignment="Center">
					<TextBlock
						Margin="0 15 0 0"
						FontSize="20"
						Height="60"
						FontWeight="SemiBold"
						Width="559">
						<Run
							Text="Regular Edition has more features and unrestricted access &#xA;To buy with exciting discount" />
						<LineBreak />
						<Run
							Text="To" />
					</TextBlock>
					<Button
						Name="productbtn"
						Width="150"
						Content="View Product"
						Margin="0 5 0 0"
						Height="35"
						FontSize="20"
						FontWeight="SemiBold"
						Style="{StaticResource reviewBtn1}"
						Click="productClick" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					Margin="0 0 0 20"
					VerticalAlignment="Center">
					<TextBlock
						Margin="0 6 55 0"
						Text="Please give a review on google about our gann product"
						FontSize="20"
						FontWeight="SemiBold" />
					<Button
						Name="loginBtn"
						Width="150"
						Content="Write a review"
						Margin="0 5 0 0"
						Height="35"
						FontSize="20"
						FontWeight="SemiBold"
						Style="{StaticResource reviewBtn1}"
						Click="reviewClick" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					VerticalAlignment="Center">
					<TextBlock
						Margin="0 6 55 0"
						Text="For Support and Buying Regular edition software please contact:&#xA;Balaganapathi : +916382157871 &#xA;Kamesh : +916382491992 &#xA;Muthukumar : +916381034468 "
						FontSize="20"
						FontWeight="SemiBold" />
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
