<Window
	x:Class="New_SF_IT.LoadingPopup" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:New_SF_IT"
	WindowStyle="None"
	AllowsTransparency="True"
	Background="#00FFFFFF"
	WindowStartupLocation="CenterScreen"
	ShowInTaskbar="False"
	Topmost="True"
	ResizeMode="NoResize"
	SizeToContent="WidthAndHeight">
	<Border
		CornerRadius="10"
		Padding="20">
		<Border.Background>
			<LinearGradientBrush
				StartPoint="0,0"
				EndPoint="1,1">
				<GradientStop
					Color="#8D83FF"
					Offset="0" />
				<GradientStop
					Color="#6E92FF"
					Offset="1" />
			</LinearGradientBrush>
		</Border.Background>
		<StackPanel>
			<TextBlock
				Text="Loading, please wait..."
				Margin="0,0,0,10"
				FontSize="18"
				HorizontalAlignment="Center"
				Foreground="#FFFFFFFF" />
			<ProgressBar
				IsIndeterminate="True"
				Width="200"
				Height="7" />
		</StackPanel>
	</Border>
</Window>
