				<StackPanel
					VerticalAlignment="Top"
					Background="#DDE1FF">
					<TextBlock
						HorizontalAlignment="Left"
						Margin="10,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						TextWrapping="Wrap"
						Text="Volatality Drift"
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal">
					<TextBlock
						Name="Vol_Drift"
						HorizontalAlignment="Left"
						Margin="10,0,0,15"
						FontSize="14"
						FontWeight="SemiBold"
						TextWrapping="Wrap"
						Text=""
						VerticalAlignment="Top" />
				</StackPanel>
			</StackPanel>
			<StackPanel
				Grid.Column="1">
				<Grid>
					<oxy:PlotView
						Name="pieChartVol"
						Width="500"
						Height="400" />
				</Grid>
			</StackPanel>
		</Grid>
	</ScrollViewer>
</UserControl>
