						Text=""
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Background="#DDE1FF">
					<TextBlock
						HorizontalAlignment="Left"
						Margin="10,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						TextWrapping="Wrap"
						Text="Volatality OHLC"
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal">
					<TextBlock
						Name="Vol_OHLC"
						HorizontalAlignment="Left"
						Margin="10,0,0,15"
