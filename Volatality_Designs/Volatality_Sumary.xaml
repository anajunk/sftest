					VerticalAlignment="Top"
					Height="40">
					<TextBlock
						HorizontalAlignment="Left"
						Margin="10,10,0,0"
						FontSize="16"
						FontWeight="Bold"
						TextWrapping="Wrap"
						Text="Summary:"
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Background="#DDE1FF">
					<TextBlock
						HorizontalAlignment="Left"
						Margin="10,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						TextWrapping="Wrap"
						Text="OneSD"
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal">
					<TextBlock
						Name="OneSDSum"
						HorizontalAlignment="Left"
						Margin="10,0,0,15"
						FontSize="14"
						FontWeight="SemiBold"
						TextWrapping="Wrap"
						Text=""
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal" />
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal"
					Margin="0 0 0 0" />
				<StackPanel
					VerticalAlignment="Top"
					Background="#DDE1FF">
					<TextBlock
						HorizontalAlignment="Left"
						Margin="10,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						TextWrapping="Wrap"
						Text="Volatality Analysis"
						VerticalAlignment="Top" />
				</StackPanel>
				<StackPanel
					VerticalAlignment="Top"
					Orientation="Horizontal">
					<TextBlock
						Name="Vol_Analysis"
						HorizontalAlignment="Left"
						Margin="10,0,0,15"
						FontSize="14"
						FontWeight="SemiBold"
						TextWrapping="Wrap"
						Text=""
						VerticalAlignment="Top" />
